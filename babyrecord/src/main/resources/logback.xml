<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="APP_Name" value=" baby-record"/>
    <contextName>${APP_Name}</contextName>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS} %contextName %5p %c{20}.%M:%L] [%thread] %5p - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="stdout" />
    </root>

</configuration>
